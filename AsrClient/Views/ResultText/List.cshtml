@using Domain.Entities.ResultText;
@using System.Globalization
@model IEnumerable<ResultText>

@{
    ViewData["Title"] = "Результаты распознавания";
}

<p></p>

@if (Model == null || Model?.Any() == false)
{
    <span>Список результатов пуст</span>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Текст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ResultText resultText in Model)
            {
                <tr>
                    <th scope="row">@resultText.Id</th>
                    <td><a href="@(Url.Action("View", new{id=resultText.Id}))">@(resultText.Text.Substring(0,120) + "...")</a></td>
                </tr>
            }
        </tbody>
    </table>
}